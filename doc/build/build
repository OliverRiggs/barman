#!/usr/bin/env bash
# Copyright (C) 2018 2ndQuadrant Limited

set -xeu

#BARMAN_ADMIN_GIT=ssh://git@github.com/EnterpriseDB/barman-admin.git
#PANDOC_IMAGE=${CI_DOCKER_REGISTRY:-ci.qa.2ndquadrant.com:5000}/ci2ndq/pandoc
#docker build . -t pandoc
PANDOC_IMAGE=pandoc

#DOCDIR=$(pwd)
DOCDIR="${BASEDIR}/doc"
#BASEDIR=$(cd ..; pwd)
#BASEDIR=/Users/didier.michel/projects
#SRCDIR="${BASEDIR}/src"
SRCDIR="${BASEDIR}"
DISTDIR="${DOCDIR}/dist"

#git clone -b master "${BARMAN_ADMIN_GIT}" admin
#cd admin/doc
cd "${SRCDIR}/doc/build"
mkdir -p source
cp -va "${SRCDIR}"/doc/*.md source
cp -va "${SRCDIR}"/doc/*.d source
cp -va "${SRCDIR}"/doc/manual .
cp -va "${SRCDIR}"/doc/images .
pwd
ls

USERMAP=$(docker run --rm -v "${BASEDIR}":"${BASEDIR}" "${PANDOC_IMAGE}" \
  stat -c %u:%g "${BASEDIR}")
docker run --rm -u "${USERMAP}" -w "$(pwd)" -v "${BASEDIR}:${BASEDIR}" \
  "$PANDOC_IMAGE" make clean all

pwd
ls
mkdir -p "${DISTDIR}"
cp -va *.html *.pdf "${DISTDIR}"
mkdir -p "${DISTDIR}/html-templates"
cp -va html-templates/*.css "${DISTDIR}/html-templates"
mkdir -p "${DISTDIR}/images"
cp -va images/* "${DISTDIR}/images"
